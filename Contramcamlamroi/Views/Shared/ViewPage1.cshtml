<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/script.js"></script>
    <style>
        #animation-top5 {
            color: white;
            text-shadow: 1px 1px 2px gray, 0 0 25px red, 0 0 5px red;
        }

        /*.div-footer {
            position: fixed;
            text-align: center;
            bottom: 0;
            left: 0;
            padding-top: 15px;
            height: 50px;
            width: 100%;
            background-color: forestgreen;
        }*/

        li.format-hello {
            padding-top: 15px;
            color: white;
        }

        .navbar-inverse {
            background-color: green;
        }

           
       
        </style>
    </head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("VEGEFOODS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trang Chủ", "Index", "Product")</li>
                    <li>@Html.ActionLink("Kênh người bán", "LoginAdmin", "Admin")</li>
                    <li>@Html.ActionLink("Liên hệ ", "Contact", "Home")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <span>
                            <a href="/ShoppingCart/ShowCart">
                                <img src="@Url.Content("~/Content/images/cart.png")" style="height:30px;width:30px;margin-top:10px;" />
                            </a>
                        </span>
                        @Html.Action("BagCart", "ShoppingCart")
                    </li>
                    <li><a href="/LoginUser/RegisterUser"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li><a href="/LoginUser/Index"><span class="glyphicon glyphicon-user"></span> Login</a></li>
                    <li><a href="@Url.Action("LogOutUser","LoginUser")"> LogOut</a></li>
                    <li class="format-hello">
                        @if (Session["NameUser"] == null)
                        {
                            <span> HeLLo</span>
                        }

                        else
                        {
                            <span> <text> Hello </text> <a href="@Url.Action("Index_Admin","Product")">@Session["NameUser"]</a></span>
                        }
                    </li>

                </ul>
            </div>
            <div  style="text-align: center">
                @using (Html.BeginForm("Search", "Product"))
                {
                    <input type="text" name="_name" >
                    <input type="submit" value="Tìm" />
                }


            </div>
        </div>

    </div>

    <div class="row" style="margin-top:30px">
        <div class="col-md-10" id="div-content">

            @RenderBody()
        </div>
    </div>


    @*@ <div class="div-footer">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>*@
    @*@<footer style=" background-color: forestgreen;">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>